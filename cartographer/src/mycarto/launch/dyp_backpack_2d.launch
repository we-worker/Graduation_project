<launch>
  <param name="/use_sim_time" value="false" />
 
 
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find mycarto)/configuration_files
          -configuration_basename dyp_revo_lds.lua"
      output="screen">
    <remap from="scan" to="scan" />
    <remap from="imu" to="handsfree/imu" />
  </node>
 
  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
  <param name="robot_description" textfile="$(find mycarto)/urdf/dyp_backpack_2d.urdf" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
 
 
  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find mycarto)/configuration_files/demo_2d.rviz" />
 
</launch>